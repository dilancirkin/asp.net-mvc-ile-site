
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


@model BlogSite.Models.Yazi

<div class="blog-posts classic-blog single">
    <div class="post format-image">
        <div class="meta">
            <span class="date">@Model.EklenmeTarihi</span><span class="categories">
                <a href="/Kategori/Index/@Model.KategoriID">@Model.Kategori.Adi</a>
            </span><span class="comments">
                <a href="#Yorum">@Model.Yorums.Count <i class="icon-chat-1"></i></a>
            </span>
        </div>
        <h1 class="post-title">@Model.Baslik</h1>
        <figure class="main">
            <img src="@Model.Resim.BuyukBoyut" alt="" />
        </figure>
        <div class="post-content">
            <p>@Model.Icerik</p>
            <div class="meta tags">
                @foreach (BlogSite.Models.Etiket etk in Model.Etikets)
                {
                    <a href="/Etiket/Index/@etk.EtiketID">@etk.Adi</a>
                }
            </div>
            <div class="click-share">
                <ul>
                    <li><a class="btn share-facebook" href="#">Beğen</a></li>
                    <li><a class="btn share-twitter" href="#">Tweet</a></li>
                    <li><a class="btn share-pinterest" href="#">Pin it</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="about-author dark-wrapper">
    <div class="author-image"> <img alt="" src="@Model.Yazar.Resim"  style="width:120px;height: 120px;" /> </div>
    <div class="author-details">
        <h3>@Model.Yazar.Adi @Model.Yazar.Soyadi Hakkında</h3>
        <p>@Model.Yazar.Aciklama</p>
        <ul class="social">
            <li><a href="#"><i class="icon-s-twitter"></i></a></li>
            <li><a href="#"><i class="icon-s-facebook"></i></a></li>
            <li><a href="#"><i class="icon-s-pinterest"></i></a></li>
            <li><a href="#"><i class="icon-s-dribbble"></i></a></li>
            <li><a href="#"><i class="icon-s-linkedin"></i></a></li>
        </ul>
    </div>
    <div class="clearfix"></div>
</div>
<div class="divide100"></div>
<a id="Yorum" />
<div id="comments">
    <h3>@Model.Yorums.Count Yorum</h3>
    <ol id="singlecomments" class="commentlist">
        @foreach (BlogSite.Models.Yorum yorum in Model.Yorums)
        {
            <li>
                <div class="comment-wrapper">
                    <div class="user"><img alt="" src="/Content/images/defaultUser.png" class="avatar" /></div>
                    <div class="message">
                        <div class="arrow-box">
                            <div class="info">
                                <h2><a href="#">@yorum.AdSoyad</a></h2>
                                <div class="meta">
                                    <span class="date">@yorum.EklenmeTarihi.Value.ToShortDateString()</span>
                                </div>
                            </div>
                            <p>@yorum.Yorum1</p>
                        </div>
                    </div>
                </div>
            </li>
        }

    </ol>
</div>
<div class="divide100"></div>
<div class="comment-form-wrapper">
    <h3>Düşünceleriniz bizimle paylaşmak ister misiniz?</h3>
    <p>E-mail adresiniz yayınlanmayacaktır.Zorunlu alanlar * ile işaretlenmiştir.</p>
    <form class="comment-form" name="form_name" action="/Yazi/YorumYaz/@Model.Yaziid" method="post">
        <div class="name-field">
            <label><i class="icon-user"></i></label>
            <input type="text" name="AdSoyad" placeholder="İsim Soyisim*" />
        </div>
        <div class="email-field">
            <label><i class="icon-mail-alt"></i></label>
            <input type="text" name="email" placeholder="Email*" />
        </div>
        <div class="message-field">
            <textarea name="Yorum" id="textarea" rows="5" cols="30" placeholder="Yorumunuz..."></textarea>
        </div>
        <input type="submit" value="Submit" name="submit" class="btn btn-submit" />
    </form>
</div>
