@{
    Layout = null;
}
@model IEnumerable<BlogSite.Models.Yazi>

@helper IcerikKisalt(string icerik)
    {
if(icerik.Length>300)
{
    @icerik.Substring(0, 300);
}
else
{
    @icerik;
}
    }
<div class="blog-posts col-blog">
    @foreach (BlogSite.Models.Yazi yzi in Model)
    {<div class="post row">
            <div class="col-sm-4">
                <figure>
                    <a href="/Yazi/Detay/@yzi.Yaziid">
                        <div class="text-overlay">
                            <div class="info"><span>Hepsini Oku</span></div>
                        </div>
                        <img src="@yzi.Resim" alt="" />
                    </a>
                </figure>
            </div>
            <div class="col-sm-8 post-content">
                <div class="meta"><span class="date">@yzi.EklenmeTarihi.ToShortDateString()</span>
                <span class="comments"><a href="#">@yzi.Yorum.Count<i class="icon-chat-1"></i></a></span></div>
                <h2 class="post-title"><a href="/Yazi/Detay/@yzi.Yaziid">@yzi.Baslik</a></h2>
                <p>@IcerikKisalt(yzi.Icerik)</p>
            </div>
        </div>
    }
</div>




