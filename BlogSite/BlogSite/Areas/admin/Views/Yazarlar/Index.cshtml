@model List<BlogSite.Models.Yazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazarlar Sayfası</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Yazarlar</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Yazarlar Sayfası</h3>
                        </div>
                        @foreach (var yazar in Model)
                        {
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Resim</th>

                                            <th>Ad Soyad</th>
                                            <th>KullaniciAdi</th>
                                            <th>Parola</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td><img src="@yazar.Resim" width="150" /></td>
                                            <td>@yazar.Adi @yazar.Soyadi</td>
                                            <td>@yazar.KullaniciAdi</td>
                                            <td>@yazar.Parola</td>
                                            <td>@yazar.Aciklama</td>
                                            <td>@Html.ActionLink("Güncelle", "YazarGuncelle", null, new { @class = "btn btn-info" })</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        }

                    </div>
                </div>
                <!-- /.col --> 

            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>



