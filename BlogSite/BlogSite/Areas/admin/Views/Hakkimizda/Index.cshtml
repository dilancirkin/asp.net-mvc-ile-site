@model BlogSite.Models.Hakkimizda
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hakkımızda Sayfası</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Hakkımızda</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
 
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Hakkımızda Sayfası</h3>
                        </div>
                      
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Resim</th>
                                        
                                        <th>İcerik</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><img src="/Content/Logo/@Model.Resim" width="150"/></td>
                                        <td>@Model.Icerik</td>
                                        <td>@Html.ActionLink("Güncelle","HakkimizdaGuncelle",null,
                                           new {@class="btn btn-info" })</td>
                                    </tr>
                                   
                                </tbody>
                            </table>
                        </div>
                       
                    </div>           
                </div>
                
            </div>
        </div>
    </section>
 
</div>

